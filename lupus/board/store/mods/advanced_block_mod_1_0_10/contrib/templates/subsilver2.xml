<mod xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.phpbb.com/mods/xml/modx-1.2.5.xsd">
<header>
	<license>http://opensource.org/licenses/gpl-license.php GNU General Public License v2</license>
	<title lang="en">Advanced Block Mod - subsilver2 style</title>
	<description lang="en">Subsilver2 style support for the Advanced Block Mod.</description>

	<author-notes lang="en"></author-notes>

	<author-group>
		<author>
			<realname>Martin Truckenbrodt</realname>
			<username>Martin Truckenbrodt</username>
			<homepage>http://www.martin-truckenbrodt.com</homepage>
		</author>
	</author-group>

	<mod-version>1.0.5</mod-version>

	<installation>
		<level>easy</level>
		<time>60</time>
		<target-version>3.0.9</target-version>
	</installation>

	<history>
		<entry>
			<date>2010-06-18</date>
			<rev-version>1.0.4</rev-version>
			<changelog lang="en">
				<change>no registration form but more information displayed if IP is blocked</change>
			</changelog>
		</entry>
		<entry>
			<date>2010-07-18</date>
			<rev-version>1.0.5</rev-version>
			<changelog lang="en">
				<change>subsilver2 instructions moved to contrib folder</change>
			</changelog>
		</entry>
	</history>
</header>

<action-group>
	<open src="styles/subsilver2/template/ucp_register.html">
		<edit>
			<find><![CDATA[<!-- IF ERROR -->
	<tr>
		<td class="row3" colspan="2" align="center"><span class="gensmall error">{ERROR}</span></td>
	</tr>
<!-- ENDIF -->
]]></find>
			<action type="after-add"><![CDATA[<!-- IF DNSBL_POSITIVE -->
	<tr>
		<td class="row3" colspan="2" align="center"><span class="gensmall error">{L_IP_BLACKLISTED_INFO}</span></td>
	</tr>
<!-- ELSE -->
]]></action>
		</edit>
		<edit>
			<find><![CDATA[</form>]]></find>
			<action type="before-add"><![CDATA[<!-- ENDIF -->]]></action>
		</edit>
	</open>
</action-group>
</mod>